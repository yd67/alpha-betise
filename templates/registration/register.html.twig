

<html>

  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register - Free Bulma template</title>
     <link rel="stylesheet" href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css" />
    
  </head>

  <body>
    {% block body %}

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}


    <section class="section">
      <div class="colums has-text-centered  ">
        <div class="column is-7 is-offset-3 register">
          <div class="column ">
            <div class="column  card ">
              <h1 class="title is-4 has-text-centered">S'enregistrer</h1>

    {{ form_start(registrationForm) }}
    <div class="field column is-centered is-half">
      <div class="control">
        {{form_row(registrationForm.nom ,{'attr':{'class':'input' , 'placeholder':'votre nom'}}) }}
      </div>
    </div>

    <div class="field column is-half">
      <div class="control">
        {{form_row(registrationForm.prenom ,{'attr':{'class':'input' , 'placeholder':'votre prenom'}}) }}
      </div>
    </div>

    <div class="field column is-half">
      <div class="control">
        {{form_row(registrationForm.email ,{'attr':{'class':'input' , 'placeholder':'votre adresse mail'}}) }}
      </div>
    </div>

    <div class="field column is-half">
      <div class="control">
        {{form_row(registrationForm.plainPassword) }}
      </div>
    </div>

    <div class="field">
      <div class="control">
        {{form_row(registrationForm.age) }}
      </div>
    </div>
    
    {{ form_end(registrationForm) }}
    

    <div class=" block is-4 box has-text-centered">
<button type="submit" class="button is-block is-primary is-fullwidth is-medium">S'inscrire</button>
    </div>
    
    <p class="">
     <a  href=" {{path('app_login')}} ">se connecter</a> | <a href=" {{path('home')}} ">retour a l'acceil</a>
    </p>

<br />


            </div>
          </div>
        </div>      
      </div>
    </section>

{% endblock %}

  </body>
</html>
