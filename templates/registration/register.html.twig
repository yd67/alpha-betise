<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Inscription</title>

  <link rel="stylesheet" href="https://unpkg.com/bulma@0.9.0/css/bulma.min.css" />
  <link rel="stylesheet" href=" {{asset('css/main.css')}} ">

</head>

<body>
  {% block body %}

  {% for flashError in app.flashes('verify_email_error') %}
  <div class="alert alert-danger" role="alert">{{ flashError }}</div>
  {% endfor %}

  <section class="section hero ">
    <div class="colum">
      <h1 class="title has-text-centered titre-co">S'enregistrer</h1>
    </div>
    <div class="colums has-text-centered  ">
      <div class="column  is-offset-3 register">
        <div class="column ">
          <div class="column is-8 card ">
            {{ form_start(registrationForm) }}
              <div class="columns">
                <div class="field column is-half ">
                  <div class="control">
                    {{form_row(registrationForm.nom ,{'attr':{'class':'input' , 'placeholder':'votre nom'}}) }}
                  </div>
                </div>

                <div class="field column is-half">
                  <div class="control">
                    {{form_row(registrationForm.prenom ,{'attr':{'class':'input' , 'placeholder':'votre prenom'}}) }}
                  </div>
                </div>
              </div>

              <div class="field column ">
                <div class="control">
                  {{form_row(registrationForm.email ,{'attr':{'class':'input' , 'placeholder':'votre adresse mail'}}) }}
                </div>
              </div>

              <div class="field column ">
                <div class="control">
                  {{form_row(registrationForm.plainPassword) }}
                </div>
              </div>

              <div class="columns">
                <div class="field column is-half">
                  <div class="control">
                    {{form_row(registrationForm.age) }}
                  </div>
                </div>
                <div class="field column is-4">
                  <div class="control">
                    {{form_row(registrationForm.newsletter) }}
                  </div>
                </div>
              </div>


              <div class="field">
                <div class="control">
                  {{form_row(registrationForm.img) }}
                </div>
              </div>

              <div class="field">
                <div class="control">
                  {{form_row(registrationForm.agreeTerms) }}
                </div>
              </div>

              <div class=" block is-4 box has-text-centered">
                <button type="submit" class=" button is-link  is-fullwidth is-medium">S'inscrire</button>
              </div>
            {{ form_end(registrationForm) }}

            <p class="">
              <a href=" {{path('app_login')}} ">se connecter</a> | <a href=" {{path('home')}} ">retour a l'acceuil</a>
            </p>
            <br />
          </div>
        </div>
      </div>
    </div>
  </section>

  {% endblock %}

</body>

</html>